{
  "name": "neftit-ethereum-contracts",
  "version": "1.0.0",
  "description": "NEFTIT NFT Smart Contracts for Ethereum and EVM chains",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "deploy:amoy": "hardhat run scripts/deploy.js --network amoy",
    "deploy:arbitrum": "hardhat run scripts/deploy.js --network arbitrumSepolia",
    "deploy:optimism": "hardhat run scripts/deploy.js --network optimismSepolia",
    "verify:sepolia": "hardhat verify --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.22.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "dotenv": "^16.3.1"
  }
}
